        },
        "version": "1.0"
    },
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "paths": {
        "/nucleotides/count": {
            "post": {
                "description": "Upload a .fasta/.fa (or plain text FASTA) file and get counts of A/C/G/T with total.",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "nucleotides"
                ],
                "summary": "Count nucleotides from a FASTA file",
                "parameters": [
                    {
                        "type": "file",
                        "description": "FASTA file (.fasta, .fa) or text/plain",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.NucleotideCountResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid file or parameters",
                        "schema": {
                            "$ref": "#/definitions/apierror.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal error while processing file",
                        "schema": {
                            "$ref": "#/definitions/apierror.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "apierror.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "controllers.NucleotideCountDTO": {
            "type": "object",
            "properties": {
                "A": {
                    "type": "integer"
                },
                "C": {
                    "type": "integer"
                },
                "G": {
                    "type": "integer"
                },
                "T": {
                    "type": "integer"
                }
            }
        },
        "controllers.NucleotideCountResponse": {
            "type": "object",
            "properties": {
                "bases": {
                    "$ref": "#/definitions/controllers.NucleotideCountDTO"
                },
                "total": {
                    "type": "integer"
                }
            }
        }
    },
    "externalDocs": {
        "description": "OpenAPI",
        "url": "https://swagger.io/resources/open-api/"
    }
}